<% @recipe.each_slice(3) do |recipes| %>
	<div class="row">
	<% recipes.each do|recipe| %>
		<div class="col-md-4">
			<div class="recipe">
				<div class="image_wapper"></div>
					<%= link_to recipe do  %>
					<%= image_tag recipe.image.url(:medium) %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<h2>
	  <%= link_to recipe.title, recipe %>
	</h2>
	<% end %>
<% end %>